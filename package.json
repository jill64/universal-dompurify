{
  "name": "universal-dompurify",
  "description": "ðŸ’Ž Use DOMPurify for some context by conditional exports",
  "type": "module",
  "version": "0.1.1",
  "license": "MIT",
  "author": "jill64 <intents.turrets0h@icloud.com> (https://github.com/jill64)",
  "bugs": "https://github.com/jill64/universal-dompurify/issues",
  "homepage": "https://github.com/jill64/universal-dompurify#readme",
  "files": [
    "dist",
    "!*.test.*",
    "!*.spec.*"
  ],
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "browser": "./dist/browser.js",
      "node": "./dist/node.js",
      "default": "./dist/edge.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jill64/universal-dompurify.git"
  },
  "keywords": [
    "dompurify",
    "isomorphic",
    "universal"
  ],
  "prettier": "@jill64/prettier-config",
  "scripts": {
    "build": "tsc && npx tsx scripts/build.ts && npx publint",
    "prepack": "npm run build",
    "lint": "npx eslint . && npx depcheck",
    "format": "npx prettier -w ."
  },
  "devDependencies": {
    "@jill64/eslint-config-ts": "0.1.5",
    "@jill64/prettier-config": "0.0.2",
    "@types/jsdom": "21.1.6",
    "esbuild": "0.19.8",
    "esbuild-plugin-polyfill-node": "0.3.0",
    "typescript": "5.3.2"
  },
  "dependencies": {
    "@types/dompurify": "3.0.5",
    "dompurify": "3.0.6",
    "jsdom": "23.0.1"
  }
